<div class="container text-center d-flex justify-content-center">

    <div class="row">
        <div class="col-xs-4">
            {{#each notDevoured}}
            <div class='not-devoured'>
                <p>{{this.id}}. {{this.burger_name}}</p>
                <button id='{{this.id}}'>DEVOUR IT!</button>
            </div>
            {{/each}}
        </div>

        <div class="col-xs-4">
            <img src='assets/img/burger.png' class='d-block' alt="Burger Picture">
            <textarea name="newBurger" id="textArea" class='d-block' cols='40' rows="2"></textarea>
            <button class='btn btn-primary' id='submit' name='submit'>Submit</button>
        </div>
        <div class="col-xs-4">
            <div>
                {{#each devoured}}
                <div class="devoured">
                <p>{{this.burger_name}}</p>
                </div>
                {{/each}}
            </div>

        </div>
    </div>

</div>